@using AcmeSystem.Presentation.ClientWeb.Infrastructure
@model CreateViewModel<Compte>
@{
    ViewData["Title"] = "Edition d'un compte";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var labelAttributes = new { @class = "col-sm-2 col-form-label" };
    var textBoxAttributes = new { @class = "form-control" };
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4>Edition d'un compte</h4>
            </div>
            <div class="card-body">
                @if (FlashMessage.HasError())
                {
                    <div class="alert alert-@FlashMessage.Type" role="alert">
                        <strong>Erreur !</strong> @FlashMessage.Message
                    </div>
                }
          
                @using (Html.BeginForm("Save", "Compte", FormMethod.Post))
                {
                    @Html.Hidden("Compte.CompteId", Model.Entity.Id)
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Entity.Nom, "Nom", labelAttributes)
                        <div class="col-sm-10">
                            @Html.TextBox("Compte.Nom", Model.Entity.Nom, new { @class = "form-control" } )
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="offset-sm-2 col-sm-10">
                            <input type="submit" class="btn btn-primary" value="Enregistrer" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>