
@using AcmeSystem.Presentation.ClientWeb.Infrastructure
@model ContactListViewModel

    @{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

<div class="row">
    <div class="col-5">
        <a class="btn btn-block btn-secondary"
           asp-action="Create"
           asp-controller="Contact"
           asp-route-category="">
            Nouveau contact
        </a>
    </div>
</div>

@if (FlashMessage.HasMessage())
{
    <div class="alert alert-@FlashMessage.Type.ToString()" role="alert">
        <strong>Yeah !</strong> @FlashMessage.Message
    </div>
}

    @foreach (var c in Model.Contacts)
    {
        <div class="row">
            <div class="card card-outline-primary m-1 p-1 card-block">
                <div class="bg-faded p-1">
                    <h4>@c.ToString()</h4>
                </div>
                <div class="card-text p-1">@c.Nom</div>
                <div class="card-text p-1">@c.Prenom</div>
                <div class="card-text p-1">@c.Adresse</div>
            </div>
        </div>
    }
<div class="row">
    <div page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true"
         page-class="btn" page-class-normal="btn-secondary"
         page-class-selected="btn-primary" class="btn-group pull-right m-1">
    </div>
</div>
